<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/n30px"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />


    <com.hd.mylib.roundrect.ShapeCornerBgView
        android:id="@+id/ivSel"
        style="@style/btnRed"
        android:layout_width="@dimen/n114px"
        android:layout_height="@dimen/n60px"
        android:layout_margin="@dimen/n5px"
        android:text="使用"
        android:textColor="@color/_FFFFFF"
        android:textSize="@dimen/s28px" />


    <com.hd.mylib.roundrect.ShapeCornerBgView
        style="@style/btnBlue"
        android:layout_width="@dimen/n200px"
        android:layout_height="@dimen/n60px"
        android:layout_margin="@dimen/n5px"
        android:text="使用"
        android:textColor="@color/_FFFFFF"
        android:textSize="@dimen/s28px" />


    <com.hd.mylib.roundrect.ShapeCornerBgView
        android:id="@+id/sbc_show"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/n56px"
        android:layout_margin="@dimen/n5px"
        android:layout_marginLeft="@dimen/n32px"
        android:layout_marginTop="@dimen/n20px"
        android:paddingLeft="@dimen/n20px"
        android:paddingRight="@dimen/n20px"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/s24px"
        app:appBgColor="@android:color/holo_purple"
        app:appRadius="@dimen/n28px" />

    <com.hd.mylib.roundrect.ShapeCornerBgView
        android:id="@+id/btnClick"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/n80px"
        android:layout_margin="@dimen/n5px"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/n30px"
        android:paddingRight="@dimen/n30px"
        android:text="点击我试一试(禁用/非禁用)"
        android:textColor="@color/_000000"
        android:textSize="@dimen/s22px"
        app:appBgColor="@color/_00000000"
        app:appBorder="true"
        app:appBorderColor="@color/_000000"
        app:appBorderColorEnd="@android:color/holo_purple"
        app:appBorderWidth="@dimen/n5px"
        app:appDisableBgColor="@color/_999999"
        app:appDisableBorder="false"
        app:appDisableTextColor="@color/white"
        app:appRadius="@dimen/n20px" />


    <com.hd.mylib.roundrect.ShapeCornerBgView
        android:id="@+id/btnClick2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/n80px"
        android:layout_margin="@dimen/n5px"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/n30px"
        android:paddingRight="@dimen/n30px"
        android:text="点击我试一试(选中/取消选中)"
        android:textColor="@color/white"
        android:textSize="@dimen/s22px"
        app:appBgColor="@android:color/holo_blue_dark"
        app:appBgColorEnd="@android:color/holo_orange_dark"
        app:appRadius="@dimen/n40px"
        app:appUnCheckedBgColor="@color/_999999"
        app:appUnCheckedBorder="false"
        app:appUnCheckedTextColor="@color/white" />


    <com.hd.mylib.roundrect.ShapeBgRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/n100px"
        app:appBgColor="@android:color/holo_green_dark"
        app:appBgColorEnd="@android:color/holo_red_dark">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@mipmap/ic_launcher"
            android:drawablePadding="@dimen/n10px"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/white" />

    </com.hd.mylib.roundrect.ShapeBgRelativeLayout>
</LinearLayout>