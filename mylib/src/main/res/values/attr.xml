<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 背景颜色 -->
    <attr name="appBgColor" format="color" />
    <!-- 边角幅度 -->
    <attr name="appRadius" format="dimension" />

    <!-- 是否有边框 -->
    <attr name="appBorderWidth" format="dimension" />
    <!-- 边框线条的粗细 -->
    <attr name="appBorderColor" format="color" />


    <!--背景色渐变最后一个色值,左右渐变,如果为透明色默认无渐变,起始渐变色为appBgColor-->
    <attr name="appBgColorEnd" format="color" />

    <!--背景边框渐变最后一个色值,左右渐变,如果为透明色默认无渐变,起始渐变色为appBorderColor-->
    <attr name="appBorderColorEnd" format="color" />


    <!--禁用时的透明度值,默认为1 (from=0.0, to=1.0)-->
    <attr name="appDisableAlpha" format="float" />

    <!--  圆角矩形TextView-->
    <declare-styleable name="ShapeCornerBgView">
        <!-- 是否有边框 -->
        <attr name="appBorder" format="boolean" />
        <!-- 边框线条的粗细 -->
        <attr name="appBorderWidth" />
        <!-- 边框线条的颜色 -->
        <attr name="appBorderColor" />
        <!-- 背景的颜色 -->
        <attr name="appBgColor" />
        <!-- 圆角度数 -->
        <attr name="appRadius" />

        <!--背景渐变色-->
        <attr name="appBgColorEnd" />
        <!--边框渐变色-->
        <attr name="appBorderColorEnd" />

        <!--默认是不禁用的-->
        <!-- 禁用时的背景颜色 -->
        <attr name="appDisableBgColor" format="color" />
        <!-- 禁用时的文字颜色 -->
        <attr name="appDisableTextColor" format="color" />
        <!-- 禁用时边框颜色 -->
        <attr name="appDisableBorderColor" format="color" />
        <!-- 禁用时是否有边框 -->
        <attr name="appDisableBorder" format="boolean" />
        <!-- 禁用时边框线条的粗细 -->
        <attr name="appDisableBorderWidth" format="dimension" />

        <!--禁用时的透明度值,默认为1 (from=0.0, to=1.0)-->
        <attr name="appDisableAlpha" />

        <!--禁用时背景色渐变最后一个色值,左右渐变,如果为透明色默认无渐变,起始渐变色为appDisableBgColor-->
        <attr name="appDisableBgColorEnd" format="color" />

        <!--禁用时背景边框渐变最后一个色值,左右渐变,如果为透明色默认无渐变,起始渐变色为appDisableBorderColor-->
        <attr name="appDisableBorderColorEnd" format="color" />

        <!--app禁用时是否显示禁用效果,默认true显示-->
        <attr name="appDisableUiEnable" format="boolean"></attr>

        <!--默认是选中的-->
        <!-- 没选中时背景颜色 -->
        <attr name="appUnCheckedBgColor" format="color" />
        <!-- 没选中时文字颜色 -->
        <attr name="appUnCheckedTextColor" format="color" />
        <!-- 没选中时边框颜色 -->
        <attr name="appUnCheckedBorderColor" format="color" />
        <!-- 没选中时是否有边框 -->
        <attr name="appUnCheckedBorder" format="boolean" />
        <!-- 没选中时边框线条的粗细 -->
        <attr name="appUnCheckedBorderWidth" format="dimension" />

        <!-- 是否选中 -->
        <attr name="appChecked" format="boolean" />


        <!--没选中时背景色渐变最后一个色值,左右渐变,如果为透明色默认无渐变,起始渐变色为appUnCheckedBgColor-->
        <attr name="appUnCheckedBgColorEnd" format="color" />
        <!--没选中时背景边框渐变最后一个色值,左右渐变,如果为透明色默认无渐变,起始渐变色为appUnCheckedBorderColor-->
        <attr name="appUnCheckedBorderColorEnd" format="color" />


        <!--按下去时的背景颜色-->
        <attr name="appBgColorPressed" format="color" />
        <!--按下去时的文本颜色-->
        <attr name="appTextColorPressed" format="color" />
        <!--是否按下去功能可用-->
        <attr name="appPressedStyle" format="boolean" />
    </declare-styleable>

    <!-- 圆角矩形可以选择的选择器 -->
    <declare-styleable name="ShapeCornerSelectView">
        <attr name="appsBorder" format="boolean" />
        <!-- 是否有边框，默认有 -->
        <attr name="appsDivider" format="boolean" />
        <!-- 是否有分割线，默认无 -->
        <attr name="appsDividerColor" format="boolean" />
        <!-- 分割线颜色 -->
        <attr name="appsBorderWidth" format="dimension" />
        <!-- 边框线条的粗细 -->
        <attr name="appsBorderColor" format="color" />
        <!-- 边框线条的颜色 -->
        <attr name="appsBgColor" format="color" />
        <!-- 背景的颜色 （默认） -->
        <attr name="appsBgColorSelect" format="color" />
        <!-- 背景的颜色（选中） -->
        <attr name="appsRadius" format="dimension" />
        <!-- 圆角度数 -->
        <attr name="appsTextColorSelect" format="color" />
        <!-- 文本颜色（选中） -->
        <attr name="appsTextSizeSelect" format="dimension" />
        <!-- 文本字的大小（选中） -->
        <attr name="appsTextColor" format="color" />
        <!-- 文本颜色（默认） -->
        <attr name="appsTextSize" format="dimension" />
        <!-- 文本颜色（默认） -->
    </declare-styleable>

    <!-- 圆角矩形可以选择的选择器 -->
    <declare-styleable name="ShapeBgLinearLayout">
        <attr name="appBgColor" />
        <attr name="appRadius" />
        <!-- 是否有边框 -->
        <attr name="appBorderWidth" />
        <!-- 边框线条的粗细 -->
        <attr name="appBorderColor" />

        <!--背景渐变色-->
        <attr name="appBgColorEnd" />
        <!--边框渐变色-->
        <attr name="appBorderColorEnd" />
    </declare-styleable>

    <!-- 圆角矩形可以选择的选择器 -->
    <declare-styleable name="ShapeBgRelativeLayout">
        <attr name="appBgColor" />
        <attr name="appRadius" />
        <!-- 是否有边框 -->
        <attr name="appBorderWidth" />
        <!-- 边框线条的粗细 -->
        <attr name="appBorderColor" />

        <!--背景渐变色-->
        <attr name="appBgColorEnd" />
        <!--边框渐变色-->
        <attr name="appBorderColorEnd" />
    </declare-styleable>


</resources>